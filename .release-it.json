{
    "non-interactive": true,
    "git": {
        "requireUpstream": false,
        "requireCleanWorkingDir": false,
        "commitMessage": "Release ${version} [skip ci]"
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true,
        "assets": ["dist/*.tar.gz"]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    }
}
